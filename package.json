{
	"name": "@lusc/sudoku",
	"version": "0.0.0",
	"main": "dist/index.js",
	"repository": "https://github.com/melusc/sudoku",
	"author": "lusc",
	"license": "MIT",
	"private": false,
	"publishConfig": {
		"access": "public"
	},
	"type": "module",
	"ava": {
		"files": [
			"test/**/*.test.ts"
		],
		"environmentVariables": {
			"NODE_ENV": "test"
		},
		"typescript": {
			"compile": false,
			"rewritePaths": {
				"test/": "dist/test/test/"
			}
		}
	},
	"scripts": {
		"fmt": "prettier -w . && xo --fix",
		"build": "tsc",
		"test": "yarn run build-tests && yarn ava",
		"build-tests": "tsc --project test.tsconfig.json"
	},
	"devDependencies": {
		"@ava/typescript": "^3.0.1",
		"@lusc/tsconfig": "^1.0.0",
		"@types/node": "^17.0.4",
		"ava": "^4.0.0-rc.1",
		"prettier": "^2.5.1",
		"typescript": "^4.5.4",
		"xo": "^0.47.0"
	}
}
