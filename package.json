{
	"name": "@lusc/sudoku",
	"version": "2.7.0",
	"repository": "https://github.com/melusc/sudoku",
	"author": "lusc",
	"license": "MIT",
	"private": false,
	"publishConfig": {
		"access": "public"
	},
	"files": [
		"dist/src"
	],
	"engines": {
		"node": "^14.13.1 || >=16.0.0"
	},
	"main": "./dist/src/index.js",
	"exports": {
		".": "./dist/src/index.js",
		"./plugins": "./dist/src/plugins/index.js"
	},
	"type": "module",
	"ava": {
		"files": [
			"test/**/*.test.ts"
		],
		"environmentVariables": {
			"NODE_ENV": "test"
		},
		"typescript": {
			"compile": false,
			"rewritePaths": {
				"test/": "dist/test/"
			}
		}
	},
	"scripts": {
		"prepublishOnly": "yarn run build",
		"fmt": "prettier -w . && xo --fix",
		"build": "rimraf dist && tsc",
		"pretest": "yarn build",
		"test": "yarn ava"
	},
	"devDependencies": {
		"@ava/typescript": "^3.0.1",
		"@lusc/tsconfig": "^1.2.2",
		"@types/node": "^17.0.41",
		"ava": "^4.3.0",
		"prettier": "^2.6.2",
		"rimraf": "^3.0.2",
		"typescript": "^4.7.3",
		"xo": "^0.50.0"
	},
	"sideEffects": false
}
